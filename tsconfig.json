{
   "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "noEmit": true,
      "types": ["node", "cypress", "cypress-axe", "cypress-real-events"]
   },
   "include": [
      "src",
      "demo",
      "tests",
      "vite-env.d.ts",
      "cypress.config.ts",
      "./cypress/**/*.ts",
      "cypress.d.ts"
   ]
}
