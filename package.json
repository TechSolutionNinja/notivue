{
   "name": "notivue",
   "private": true,
   "version": "0.9.0",
   "scripts": {
      "dev": "vite",
      "build": "rimraf dist && vue-tsc && vite build",
      "build:demo": "rimraf dist && vite build --mode demo",
      "postbuild": "postcss ./src/animations.css ./src/notifications.css -d ./dist/ --use cssnano postcss-nesting --no-map",
      "preview": "vite preview"
   },
   "main": "dist/index.js",
   "module": "dist/index.mjs",
   "types": "dist/index.d.ts",
   "exports": {
      ".": {
         "import": "./dist/index.mjs",
         "require": "./dist/index.js"
      },
      "./component.css": {
         "import": "./dist/component.css",
         "require": "./dist/component.css"
      },
      "./animations.css": {
         "import": "./dist/animations.css",
         "require": "./dist/animations.css"
      }
   },
   "devDependencies": {
      "@rollup/plugin-terser": "^0.4.1",
      "@vitejs/plugin-vue": "^4.1.0",
      "cssnano": "^5.1.15",
      "postcss": "^8.4.23",
      "postcss-cli": "^10.1.0",
      "postcss-nesting": "^11.2.2",
      "prettier": "^2.8.8",
      "rimraf": "^4.4.1",
      "typescript": "^4.9.5",
      "vite": "^4.3.1",
      "vite-plugin-dts": "^2.3.0",
      "vue": "^3.2.47",
      "vue-tsc": "^1.4.4"
   }
}
